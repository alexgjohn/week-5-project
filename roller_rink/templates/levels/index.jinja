{% extends 'base.jinja' %}

{% block content %}
<h1>{{ title }}</h1>

{% for level in levels %}
<div id="level-list-item">{{ level.skater.full_name }} attends {{ level.lesson.name }} at {{ level.level_reached }} level!
    <form class="delete-form" action="/levels/{{ level.id }}/delete" method="POST">
            <button class="trash-button">REMOVE SKATER FROM LESSON</button>
    </form>
</div>
<hr>
{% endfor %}

<i>Want to book a skater to a lesson?</i>
<p><a href="/skaters">Click here</a> to choose a skater!</p>
<p>or...</p>
<p><a href="/lessons">Click here</a> to choose a lesson</p>

{# <p><a href="/levels/new">Book skater to lesson</a></p> #}
{% endblock %}