{% extends 'base.jinja' %}

{% block content %}
<h1>{{ title }}</h1>

<form action="/lessons" method="post">
    <div>
        <label for="name">Name: </label>
        <input type="text" id="name" name="name" required>
    </div>
    <div>
        <label for="day">Day: </label>
        <select id="day" name="day">
            {% for day in days %}
            <option value="{{ day }}">{{ day }}</option>
            {% endfor %}
        </select>
    </div>
    <div>
        <label for="capacity">Capacity: </label>
        <input type="number" id="capacity" name="capacity" min="1" value="1">

    </div>
    <div>
        <label for="premium">Is this a premium lesson? </label>
        <select id="premium" name="premium" value=>
            <option value="False">No</option>
            <option value="True">Yes</option>
        </select>
    </div>
    <div>
        <button type="submit">Create Lesson</button>
    </div>
</form>
{# this saves the lesson successfully, but doesn't pass the premium boolean through to the show page #}

{% endblock %}